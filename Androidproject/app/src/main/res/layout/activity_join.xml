<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE156">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/roomNum"
        android:layout_alignLeft="@id/roomNum"
        android:text="请输入房间号："
        android:textSize="15sp" />

    <EditText
        android:id="@+id/roomNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ems="8"
        />

    <Button
        android:id="@+id/confirmJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/roomNum"
        android:layout_alignLeft="@id/roomNum"
        android:background="@drawable/clickbutton"
        android:text="加入" />


</RelativeLayout>

